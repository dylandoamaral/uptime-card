{
  "name": "uptime-card",
  "version": "1.0.0",
  "description": "Minimalistic uptime card for Home Assistant Lovelace UI",
  "keywords": [
    "automation",
    "custom-cards",
    "hass",
    "home-assistant",
    "homeassistant",
    "lovelace"
  ],
  "type": "module",
  "module": "uptime-card.js",
  "repository": "https://github.com/dylandoamaral/uptime-card",
  "author": "Dylan Do Amaral <do.amaral.dylan@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.6.6",
    "home-assistant-js-websocket": "^4.5.0",
    "lit": "^2.0.2",
    "localforage": "^1.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/semantic-dom-diff": "^0.19.5",
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-legacy": "^0.1.7",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-mocha": "^0.7.4",
    "@web/test-runner-playwright": "^0.8.4",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lit-analyzer": "^0.0.6",
    "mocha": "^9.1.3",
    "prettier": "^2.3.2",
    "rollup": "^2.28.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "build": "npm run check && npm run rollup",
    "check": "eslint 'src/**/*.ts' && prettier --config .prettierrc 'src/**/*.ts' --check",
    "format": "eslint 'src/**/*.ts' --fix && prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "wtr test/**/*.test.ts --node-resolve",
    "snapshot": "wtr test/**/*.test.ts --node-resolve --update-snapshots",
    "rollup": "rollup -c",
    "start": "rollup -c rollup.config.dev.js --watch"
  }
}